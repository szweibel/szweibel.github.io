---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Stephen Zweibel',
  description = 'Digital Scholarship Librarian working with AI, UX, and computational literacy'
} = Astro.props;

const currentPath = Astro.url.pathname;

const navItems = [
  { href: '/', label: 'Home' },
  { href: '/projects', label: 'Projects' },
  { href: '/publications', label: 'Publications' },
  { href: '/presentations', label: 'Presentations' },
  { href: '/teaching', label: 'Teaching' },
  { href: '/about', label: 'About' },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Space+Mono:wght@400;700&display=swap" rel="stylesheet" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <nav class="nav-container">
      <div class="nav-inner">
        <a href="/" class="brand-link">Stephen Zweibel</a>
        <div class="nav-links">
          {navItems.map((item) => (
            <a
              href={item.href}
              class:list={[
                "nav-link",
                (item.href === '/' ? currentPath === '/' : currentPath.startsWith(item.href)) && 'nav-link-active'
              ]}
            >
              {item.label}
            </a>
          ))}
        </div>
      </div>
    </nav>

    <main class="main-content">
      <slot />
    </main>

    <footer class="footer">
      <div class="footer-inner">
        <div class="footer-info">
          <span>Stephen Zweibel</span>
          <span class="separator">|</span>
          <span>Digital Scholarship Librarian</span>
          <span class="separator">|</span>
          <span>CUNY Graduate Center</span>
        </div>
        <div class="footer-links">
          <a href="https://github.com/szweibel" target="_blank" rel="noopener noreferrer">GitHub</a>
          <a href="https://twitter.com/stevezweibel" target="_blank" rel="noopener noreferrer">Twitter</a>
          <a href="mailto:szweibel@gc.cuny.edu">Email</a>
        </div>
        <div class="footer-copy">&copy; {new Date().getFullYear()}</div>
      </div>
    </footer>

    <style>
      .nav-container {
        border-bottom: 1px solid var(--color-border);
        background: var(--color-bg);
      }

      .nav-inner {
        max-width: 48rem;
        margin: 0 auto;
        padding: 1rem 1.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .brand-link {
        font-weight: 700;
        color: var(--color-text);
        text-decoration: none;
      }

      .brand-link:hover {
        color: var(--color-accent);
      }

      .nav-links {
        display: flex;
        gap: 1.5rem;
        align-items: center;
      }

      .nav-link {
        font-size: 0.875rem;
        color: var(--color-text-muted);
        text-decoration: none;
      }

      .nav-link:hover {
        text-decoration: underline;
        color: var(--color-text);
      }

      .nav-link-active {
        color: var(--color-accent);
        text-decoration: underline;
        text-underline-offset: 3px;
      }

      .main-content {
        max-width: 48rem;
        margin: 0 auto;
        padding: 2rem 1.5rem;
        min-height: calc(100vh - 200px);
      }

      .footer {
        border-top: 1px solid var(--color-border);
        background: var(--color-bg);
      }

      .footer-inner {
        max-width: 48rem;
        margin: 0 auto;
        padding: 1.5rem;
        font-size: 0.875rem;
        color: var(--color-text-muted);
      }

      .footer-info {
        margin-bottom: 0.75rem;
      }

      .separator {
        margin: 0 0.5rem;
        color: var(--color-border);
      }

      .footer-links {
        display: flex;
        gap: 1rem;
        margin-bottom: 0.75rem;
      }

      .footer-links a {
        color: var(--color-accent);
        text-decoration: underline;
      }

      .footer-links a:hover {
        color: var(--color-accent-hover);
      }

      .footer-copy {
        color: var(--color-text-muted);
      }

      @media (max-width: 768px) {
        .nav-inner {
          flex-direction: column;
          gap: 1rem;
          text-align: center;
        }

        .nav-links {
          flex-wrap: wrap;
          justify-content: center;
          gap: 1rem;
        }

        .footer-info {
          display: flex;
          flex-direction: column;
          gap: 0.25rem;
        }

        .separator {
          display: none;
        }

        .footer-links {
          flex-wrap: wrap;
        }
      }
    </style>
  </body>
</html>
