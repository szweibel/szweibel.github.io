---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allProjects = (await getCollection('projects'))
  .sort((a, b) => {
    // Sort by featured first, then by year (newest first), then by stars
    if (a.data.featured && !b.data.featured) return -1;
    if (!a.data.featured && b.data.featured) return 1;
    const yearDiff = (b.data.year || 0) - (a.data.year || 0);
    if (yearDiff !== 0) return yearDiff;
    return (b.data.stars || 0) - (a.data.stars || 0);
  });
---

<BaseLayout
  title="Projects - Stephen Zweibel"
  description="Open source projects, digital humanities tools, and library applications"
>
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Projects</h1>
      <p class="text-xl text-gray-600">
        A portfolio of digital humanities tools, library applications, and educational resources.
        All projects are open source and available on <a href="https://github.com/szweibel" target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:text-blue-800">GitHub</a>.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {allProjects.map((project) => (
        <article class="border border-gray-200 rounded-lg p-6 hover:shadow-lg transition-shadow">
          <div class="flex items-start justify-between mb-4">
            <h2 class="text-2xl font-bold text-gray-900">
              <a href={`/projects/${project.slug}`} class="hover:text-blue-600">
                {project.data.title}
              </a>
            </h2>
            <div class="flex items-center space-x-2">
              {project.data.featured && (
                <span class="px-2 py-1 bg-blue-100 text-blue-800 text-xs font-semibold rounded">
                  Featured
                </span>
              )}
              {project.data.stars && (
                <span class="text-sm text-gray-600 flex items-center">
                  <svg class="w-4 h-4 mr-1 fill-current text-yellow-500" viewBox="0 0 20 20">
                    <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
                  </svg>
                  {project.data.stars}
                </span>
              )}
            </div>
          </div>

          {project.data.funding && (
            <div class="mb-3">
              <span class="text-sm font-semibold text-green-700 bg-green-50 px-3 py-1 rounded">
                {project.data.funding}
              </span>
            </div>
          )}

          <p class="text-gray-700 mb-4">{project.data.description}</p>

          {project.data.tags && (
            <div class="mb-4 flex flex-wrap gap-2">
              {project.data.tags.map((tag: string) => (
                <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded">
                  {tag}
                </span>
              ))}
            </div>
          )}

          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-4 text-sm">
              {project.data.github && (
                <a
                  href={project.data.github}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-blue-600 hover:text-blue-800 flex items-center"
                >
                  <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 24 24">
                    <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
                  </svg>
                  GitHub
                </a>
              )}
              <a href={`/projects/${project.slug}`} class="text-blue-600 hover:text-blue-800">
                Learn more â†’
              </a>
            </div>
            {project.data.year && (
              <span class="text-sm text-gray-500">{project.data.year}</span>
            )}
          </div>
        </article>
      ))}
    </div>

    <div class="mt-16 p-8 bg-gray-50 rounded-lg">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">More Projects</h2>
      <p class="text-gray-700 mb-4">
        This portfolio includes highlighted projects. For a complete list of 40+ repositories including workshops, tools, and experimental projects, visit my GitHub profile.
      </p>
      <a
        href="https://github.com/szweibel"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center px-4 py-2 bg-gray-900 text-white rounded-lg hover:bg-gray-800"
      >
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
          <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
        </svg>
        View all projects on GitHub
      </a>
    </div>
  </div>
</BaseLayout>
