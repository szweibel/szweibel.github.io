---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allProjects = (await getCollection('projects'))
  .sort((a, b) => (b.data.year || 0) - (a.data.year || 0));
---

<BaseLayout
  title="Projects - Stephen Zweibel"
  description="Open source projects, digital humanities tools, and library applications"
>
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-10">
      <h1 class="text-4xl font-semibold text-charcoal mb-6">Projects</h1>
      <p class="text-xl text-charcoal leading-relaxed">
        Digital humanities tools, library applications, and educational resources developed for research and teaching.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {allProjects.map((project) => (
        <article class="border-2 border-warm-gray-200 rounded-xl p-8 hover:shadow-lg hover:border-rust-300 transition-all">
          <div class="mb-4">
            <h2 class="text-2xl font-semibold text-charcoal">
              {project.data.github ? (
                <a href={project.data.github} target="_blank" rel="noopener noreferrer" class="hover:text-rust-600 transition-colors">
                  {project.data.title}
                </a>
              ) : (
                <span>{project.data.title}</span>
              )}
            </h2>
          </div>

          {project.data.funding && (
            <div class="mb-4">
              <span class="text-sm font-semibold text-rust-700 bg-rust-50 px-3 py-1 rounded-full">
                {project.data.funding}
              </span>
            </div>
          )}

          <p class="text-charcoal mb-6 leading-relaxed">{project.data.description}</p>

          {project.data.tags && (
            <div class="mb-6 flex flex-wrap gap-2">
              {project.data.tags.map((tag: string) => (
                <span class="px-3 py-1 bg-warm-gray-50 text-warm-gray-600 text-xs rounded-full border border-warm-gray-200">
                  {tag}
                </span>
              ))}
            </div>
          )}

          <div class="flex items-center justify-between pt-4 border-t border-warm-gray-200">
            <div class="flex items-center space-x-6 text-sm">
              {project.data.github && (
                <a
                  href={project.data.github}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-rust-600 hover:text-rust-700 flex items-center font-medium transition-colors"
                >
                  <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 24 24">
                    <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
                  </svg>
                  View on GitHub
                </a>
              )}
            </div>
            {project.data.year && (
              <span class="text-sm text-warm-gray-600">{project.data.year}</span>
            )}
          </div>
        </article>
      ))}
    </div>

    <div class="mt-12 pt-8 border-t border-warm-gray-200">
      <p class="text-charcoal leading-relaxed">
        Additional projects, workshop materials, and experimental work are available on <a href="https://github.com/szweibel" target="_blank" rel="noopener noreferrer" class="text-rust-600 hover:text-rust-700 transition-colors">GitHub</a>.
      </p>
    </div>
  </div>
</BaseLayout>
