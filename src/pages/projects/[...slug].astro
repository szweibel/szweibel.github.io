---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map(project => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();
---

<BaseLayout
  title={`${project.data.title} - Stephen Zweibel`}
  description={project.data.description}
>
  <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <!-- Breadcrumb -->
    <nav class="mb-8 text-sm">
      <a href="/projects" class="text-blue-600 hover:text-blue-800">← Back to Projects</a>
    </nav>

    <!-- Header -->
    <header class="mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">{project.data.title}</h1>
      <p class="text-xl text-gray-600 mb-6">{project.data.description}</p>

      <!-- Metadata -->
      <div class="flex flex-wrap gap-4 items-center mb-6">
        {project.data.year && (
          <span class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm font-medium">
            {project.data.year}
          </span>
        )}
        {project.data.status && (
          <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm font-medium">
            {project.data.status}
          </span>
        )}
        {project.data.stars && (
          <span class="flex items-center text-sm text-gray-600">
            <svg class="w-5 h-5 mr-1 fill-current text-yellow-500" viewBox="0 0 20 20">
              <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
            </svg>
            {project.data.stars} stars on GitHub
          </span>
        )}
      </div>

      {project.data.funding && (
        <div class="p-4 bg-green-50 border border-green-200 rounded-lg mb-6">
          <p class="text-green-900">
            <strong>Funding:</strong> {project.data.funding}
          </p>
        </div>
      )}

      <!-- Links -->
      <div class="flex flex-wrap gap-4">
        {project.data.github && (
          <a
            href={project.data.github}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-4 py-2 bg-gray-900 text-white rounded-lg hover:bg-gray-800"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
            </svg>
            View on GitHub
          </a>
        )}
        {project.data.url && (
          <a
            href={project.data.url}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50"
          >
            Visit Project Website →
          </a>
        )}
      </div>
    </header>

    <!-- Tags -->
    {project.data.tags && project.data.tags.length > 0 && (
      <div class="mb-8">
        <div class="flex flex-wrap gap-2">
          {project.data.tags.map((tag: string) => (
            <span class="px-3 py-1 bg-gray-100 text-gray-600 rounded-full text-sm">
              {tag}
            </span>
          ))}
        </div>
      </div>
    )}

    <!-- Content -->
    <div class="prose prose-lg max-w-none">
      <Content />
    </div>

    <!-- Footer Navigation -->
    <footer class="mt-16 pt-8 border-t border-gray-200">
      <a href="/projects" class="text-blue-600 hover:text-blue-800">
        ← Back to all projects
      </a>
    </footer>
  </article>
</BaseLayout>
